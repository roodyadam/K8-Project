{
  "dashboard": {
    "title": "Ingress Traffic Dashboard",
    "tags": ["kubernetes", "ingress", "nginx"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Ingress Requests Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(nginx_ingress_controller_requests[5m])) by (ingress, namespace)",
            "legendFormat": "{{ingress}} - {{namespace}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Ingress Request Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(nginx_ingress_controller_request_duration_seconds_bucket[5m])) by (le, ingress, namespace))",
            "legendFormat": "p95 - {{ingress}} - {{namespace}}"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(nginx_ingress_controller_request_duration_seconds_bucket[5m])) by (le, ingress, namespace))",
            "legendFormat": "p99 - {{ingress}} - {{namespace}}"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "HTTP Status Codes",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(nginx_ingress_controller_requests{status=~\"2..\"}[5m])) by (ingress, namespace)",
            "legendFormat": "2xx - {{ingress}}"
          },
          {
            "expr": "sum(rate(nginx_ingress_controller_requests{status=~\"3..\"}[5m])) by (ingress, namespace)",
            "legendFormat": "3xx - {{ingress}}"
          },
          {
            "expr": "sum(rate(nginx_ingress_controller_requests{status=~\"4..\"}[5m])) by (ingress, namespace)",
            "legendFormat": "4xx - {{ingress}}"
          },
          {
            "expr": "sum(rate(nginx_ingress_controller_requests{status=~\"5..\"}[5m])) by (ingress, namespace)",
            "legendFormat": "5xx - {{ingress}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Ingress Traffic (Bytes)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(nginx_ingress_controller_bytes_sent_sum[5m])) by (ingress, namespace)",
            "legendFormat": "Sent - {{ingress}}"
          },
          {
            "expr": "sum(rate(nginx_ingress_controller_bytes_received_sum[5m])) by (ingress, namespace)",
            "legendFormat": "Received - {{ingress}}"
          }
        ],
        "yaxes": [
          {"format": "Bps", "label": "Bytes/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "nginx_ingress_controller_connections{state=\"active\"}",
            "legendFormat": "{{ingress}}"
          }
        ]
      }
    ],
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}



