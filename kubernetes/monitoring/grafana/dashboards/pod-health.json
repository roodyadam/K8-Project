{
  "title": "Pod Health Dashboard",
  "tags": ["kubernetes", "pods"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Pod Status",
      "type": "stat",
      "targets": [
        {
          "expr": "count(kube_pod_status_phase{phase=\"Running\"})",
          "legendFormat": "Running"
        },
        {
          "expr": "count(kube_pod_status_phase{phase=\"Pending\"})",
          "legendFormat": "Pending"
        },
        {
          "expr": "count(kube_pod_status_phase{phase=\"Failed\"})",
          "legendFormat": "Failed"
        },
        {
          "expr": "count(kube_pod_status_phase{phase=\"Succeeded\"})",
          "legendFormat": "Succeeded"
        }
      ]
    },
    {
      "id": 2,
      "title": "Pod Restarts",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(kube_pod_container_status_restarts_total[5m])",
          "legendFormat": "{{pod}} - {{namespace}}"
        }
      ]
    },
    {
      "id": 3,
      "title": "Pod CPU Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"POD\",container!=\"\"}[5m])) by (pod, namespace)",
          "legendFormat": "{{pod}} - {{namespace}}"
        }
      ]
    },
    {
      "id": 4,
      "title": "Pod Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{container!=\"POD\",container!=\"\"}) by (pod, namespace)",
          "legendFormat": "{{pod}} - {{namespace}}"
        }
      ]
    },
    {
      "id": 5,
      "title": "Unhealthy Pods",
      "type": "table",
      "targets": [
        {
          "expr": "kube_pod_status_phase{phase!=\"Running\",phase!=\"Succeeded\"}",
          "format": "table"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 27,
  "version": 1
}
